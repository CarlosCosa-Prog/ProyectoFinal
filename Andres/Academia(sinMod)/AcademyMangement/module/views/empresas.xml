<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Vista Empresas-->

    <!-- Empresas tree -->
    <record model="ir.ui.view" id="soulschool.list_empresas">
      <field name="name">Lista Empresas</field>
      <field name="model">soulschool.empresas</field>
      <field name="arch" type="xml">
        <tree multi_edit="1" sample="1">
          <field name="order_id"/>
          <field name="nombre_empresa"/>
          <field name="cif_empresa"/>
        </tree>
      </field>
    </record>

    <!-- Empresas Form -->
    <record id="empresas_view_form" model="ir.ui.view">
      <field name="name">empresas.view.form</field>
      <field name="model">soulschool.empresas</field>
      <field name="arch" type="xml">
        <form string="Empresas">
          <sheet>
            <group>
              <group string="Información General">
                <field name="order_id"/>
                <field name="nombre_empresa"/>
                <field name="cif_empresa" />
                <field name="web_empresa" />
                <field name="email_empresa" />
                <field name="telefono_empresa" />
              </group>
              <group string="Dirección">
                <field name="country_id" />
                <field name="state_id" />
                <field name="localidad_empresa" />
                <field name="codigoPostal_empresa"/>
                <field name="calle_empresa"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search View -->

    <record id="empresas_search_view" model="ir.ui.view">
      <field name="name">Search View</field>
      <field name="model">soulschool.empresas</field>
      <field name="arch" type="xml">
        <search>
          <field name="nombre_empresa"/>
          <field name="cif_empresa"/>
        </search>
      </field>
    </record>  

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="soulschool.action_window_empresas">
      <field name="name">Empresas</field>
      <field name="res_model">soulschool.empresas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- submenu item -->
    <menuitem name="Empresas" id="soulschool.menu_1_2" parent="soulschool.menu_1"
              action="soulschool.action_window_empresas"/>

<!-- Fin Vista Empresas-->
</odoo>
