<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Student View -->
        <record model="ir.ui.view" id="view_student_form">
            <field name="name">student.form</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <!-- Define the student form view here -->
                <form>
                    <sheet>
                        <group>
                            <field name="nom"/>
                            <field name="prenom"/>
                            <field name="teacher_id"/>
                            <field name="classe_id"/>
                            <field name="age"/>
                            <field name="bdate"/>
                            <field name="student_age"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Student list View -->
        <record model="ir.ui.view" id="view_student_list">
            <field name="name">student.list</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nom"/>
                    <field name="prenom"/>
                    <field name="age"/>
                    <field name="bdate"/>
                    <field name="student_age"/>
                    <field name="stage"/>
                    <!-- Add more fields if needed -->
                </list>
            </field>
        </record>


        <record id="action_school_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu Items -->
        <menuitem id="menu_students" name="Students" parent="main_menu" action="action_school_student"/>


    </data>
</odoo>
