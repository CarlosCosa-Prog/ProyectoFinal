<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Classe View -->
        <record model="ir.ui.view" id="view_matiere_form">
            <field name="name">matiere.form</field>
            <field name="model">matiere</field>
            <field name="arch" type="xml">
                <!-- Define the classe form view here -->
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Classe list View -->
        <record model="ir.ui.view" id="view_matiere_list">
            <field name="name">matiere.list</field>
            <field name="model">matiere</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <!-- Add more fields if needed -->
                </list>
            </field>
        </record>

        <record id="action_school_matiere" model="ir.actions.act_window">
        <field name="name">Matieres</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">matiere</field>
        <field name="view_mode">list,form</field>
        </record>


        <!-- Menu Item -->
        <menuitem id="menu_matieres" name="MatiÃ©res" parent="main_menu" action="action_school_matiere" />

    </data>
</odoo>
